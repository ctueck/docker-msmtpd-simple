defaults

	tls ${MSMTP_TLS}
	tls_trust_file /etc/ssl/certs/ca-certificates.crt
	domain ${MSMTP_DOMAIN}
	syslog off
	logfile -

account default

	auth on
	connect_timeout 60
	dsn_notify failure
	from ${MSMTP_FROM}
	allow_from_override off
	host ${MSMTP_RELAY}
	port ${MSMTP_RELAY_PORT}
	user ${MSMTP_RELAY_USER}
	password ${MSMTP_RELAY_PASSWORD}

